@model IEnumerable<RestaurantFrontend.Models.Products.Products>

@{
    ViewData["Title"] = "List of Products";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<link href="@Url.Content("~/css/Products.css")" rel="stylesheet" type="text/css"/>
<link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css"/>
<style>
    .category-details-btn {
        font-size: 17px;
        text-decoration: none;
        border: none;
        width: 15vw;
        display: flex;
        color: black;
        text-align: center;
        align-items:center;
        justify-content: space-between;
        height: 5vh;
        padding-top: 3px;
    }

    .price-details-btn{
        font-size: 17px;
        
        text-decoration: none;
        
        border: none;
        width: 15vw;
        display: flex;
        align-items:center;
        color: black;
        text-align: center;
        justify-content: space-between;
        height: 5vh;
        
    }
    .category-list{
        margin-top: 20px;
    }
    .category-list a {
        text-decoration:none;
        color:black;
        font-size:14px;
        padding-left:11px;
        
    }

    .icon{
        font-size:30px;
        font-weight:200;
    }
       /* .cate{
            display:flex;
            justify-content:space-between;
            align-items:center;
        }*/

</style>
<div class="main-section">
    <div class="header"><h1>@Model.FirstOrDefault().Tag</h1></div>
    <div class="d-flex justify-content-around">
        <div class="filters">
            <h4>Filter by</h4>
            <hr />
            <div class="category-details">
               
                    <button class="category-details-btn" type="button">
                        Category
                    <span class="icon">-</span>
                    </button>
                
                <div class="collapse show" id="collapseWidthCategory">
                    <div class="category-list" style="width: 150px;">
                        <div class="row g-2 sku-overlay">
                            <a href="#targetAll">All</a>
                            <a href="#targetDeal">Best Deal</a>
                            <a href="#targetMost">Most Popular</a>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>      
        <div class="row g-4 justify-content-start" style="width: 80%">
           

                @Html.Partial("_AllProductsCard")

            
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Products.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $('.category-details-btn').click(function () {
            var icon = $(this).find('.icon');
            $('#collapseWidthCategory').collapse('toggle');
            icon.text(icon.text() === '-' ? '+' : '-');
        });
    });
</script>